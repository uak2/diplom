.narrow
  .row
    .col-md-4.col-md-offset-4
    .page-header
      .login-panel.panel.panel-default
        .panel-heading
          %h3{:class=>"panel-title"}Авторизация
        .panel-body
          =form_tag login_path do
            .form-group
              =label_tag :login, "Логин/Почта"
              =text_field :login, @user.try(:login), class: 'form-control'
            .form-group
              =label_tag :password, User.human_attribute_name(:password)
              =password_field_tag :password, nil, class: 'form-control'
            .form-actions
              =submit_tag 'Войти', class: 'btn btn-lg btn-success btn-block'
