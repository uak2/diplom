<p id="notice"><%= notice %></p>

<h1>Listing Role Users</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @role_users.each do |role_user| %>
      <tr>
        <td><%= role_user.role %></td>
        <td><%= role_user.user %></td>
        <td><%= link_to 'Show', role_user %></td>
        <td><%= link_to 'Edit', edit_role_user_path(role_user) %></td>
        <td><%= link_to 'Destroy', role_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

