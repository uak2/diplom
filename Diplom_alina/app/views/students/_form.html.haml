.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        Заполните поля
      .panel-body
        =form_for(@student, html: { multipart: true }) do |f|
          .row
            .col-md-12
              %label Загрузить фото
              %input{:class=>'form-control',:type=>'file', :name=>'photo'}
          .row

            .col-md-4
              .from-group
                %label Фамилия
                %input{:class=>'form-control', :name=>"second_name", :placeholder=>""}
            .col-md-4
              .from-group
                %label Имя
                %input{:class=>'form-control',:name=>"first_name", :placeholder=>""}
            .col-md-4
              .from-group
                %label Отчество
                %input{:class=>'form-control', :name=>"last_name",:placeholder=>""}
          .row
            .col-md-4
              .from-group
                %label Дата рождения
                %input{:class=>'form-control datepicker', :name=>"birthday"}
            .col-md-4
              .form-group
                %label Пол
                %select{:class=>"form-control", :name=>'sex', :default=>'m'}
                  %option{:value => "m", :selected => params[:sex] == "m"}= "Мужской"
                  %option{:value => "w", :selected => params[:sex] == "w"}= "Женский"
            .col-md-4
              .from-group
                %label Город рождения
                %input{:class=>'form-control', :name=>"birth_city",:placeholder=>""}
          .row
            -# Студентческая информация
            .col-md-2
              .form-group
                =f.label "Номер студентческого"
                =f.number_field :ducket_number, :class=>'form-control'

            .col-md-2
              .from-group
                =f.label "Дата выдачи студентческого"
                = f.text_field :ducket_date, :class=>'form-control datepicker'

            .col-md-4
              .from-group
                %label= "Специальность"
                = select_tag :speciality, options_for_select(get_options_speciality()), :class=>'form-control'
            .col-md-4
              .from-group
                %label= "План обучения"
                = select_tag :plan, options_for_select([['Ничего не выбрано', 0]]), :class=>'form-control'
          .row
            .col-md-2
              .from-group
                %label= "Учебный год"
                = select_tag :study_year, options_for_select(get_options_years), :class=>'form-control'

            .col-md-2
              .from-group
                %label= "Учебный отрезок"
                = select_tag :study_term, options_for_select([['Не выбрано', 0]]),  :class=>'form-control'
            .col-md-4
              .from-group
                =f.label 'Подразделение'
                = select_tag :subdivision, options_for_select(get_options_subdivisions), :class=>'form-control'

            .col-md-4
              .from-group
                =f.label 'Группа'
                = select_tag :group, options_for_select([['Не выбрано', 0]]), :class=>'form-control'

          .row
            .col-md-4
              .from-group
                %label Паспорт Серия
                %input{:class=>'form-control', :name=>"series",:placeholder=>""}
            .col-md-4
              .from-group
                %label Паспорт номер
                %input{:class=>'form-control', :name=>"number",:placeholder=>""}
            .col-md-4
              .from-group
                %label Код подразделения
                %input{:class=>'form-control', :name=>"code_subdivision",:placeholder=>""}
          .row
            .col-md-8
              .from-group
                %label Кем выдан
                %input{:class=>'form-control', :name=>"passport_issued",:placeholder=>""}
            .col-md-4
              .from-group
                %label Дата выдачи
                %input{:class=>'form-control datepicker', :name=>"date_extradition",:placeholder=>""}
          .row
            .col-md-12
              .from-group
                %label Место прописки
                %input{:class=>'form-control', :name=>"propiska",:placeholder=>""}
          .row
            .col-md-12
              .from-group
                %label Место регистрации
                %input{:class=>'form-control', :name=>"registration",:placeholder=>""}
          .row
            .col-md-12
              .from-group
                %label Фактическое место проживания
                %input{:class=>'form-control', :name=>"fackt",:placeholder=>""}
          .clearfix
          %p
          .action
            =f.submit(:class=>"btn btn-primary", value: 'Сохранить студента')
