= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this speciality from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading
          Заполите поля
        .panel-body
          .row
            .col-md-12
              .col-md-6
                .form-group
                  = f.label 'Логин'
                  = f.text_field :login, :class=>'form-control'

              .col-md-6
                .form-group
                  = f.label 'Пароль'
                  = f.text_field :password, :class=>'form-control'

          .row
            .col-md-12
              .col-md-12
                .form-group
                  = f.label 'Логин'
                  = f.text_field :login, :class=>'form-control'

          .row
            .col-md-12
              .col-md-3
                .actions
                  = f.submit 'Сохранить', :class=>'btn btn-primary'


