= form_for @plan do |f|
  - if @plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan.errors.count, "error")} prohibited this plan from being saved:"
      %ul
        - @plan.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :specialization
    = f.text_field :specialization
  .field
    = f.label :training_period
    = f.number_field :training_period
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
