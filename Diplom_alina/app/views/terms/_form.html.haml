= form_for @term do |f|
  - if @term.errors.any?
    #error_explanation
      %h2= "#{pluralize(@term.errors.count, "error")} prohibited this term from being saved:"
      %ul
        - @term.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :term_start
    = f.text_field :term_start
  .field
    = f.label :end_term
    = f.text_field :end_term
  .actions
    = f.submit 'Save'
