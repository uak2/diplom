= form_for @fib do |f|
  - if @fib.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fib.errors.count, "error")} prohibited this fib from being saved:"
      %ul
        - @fib.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :belong_to
    = f.text_field :belong_to
  .actions
    = f.submit 'Save'
